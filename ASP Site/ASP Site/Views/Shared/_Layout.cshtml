<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    <title>@ViewBag.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)

</head>
<body>
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-secondary" id="nav-menu">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Start", "Index", "Home", new { @class = "nav-link", id = "start" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Produkty", "Prod", "Home", new { @class = "nav-link"})
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Kontakt", "Index", "Home", new { @class = "nav-link", id = "kontakt" })
                </li>
            </ul>
        </div>
        <div class="navbar-nav order-3 w-100 flex-row" id="logo-button">
            <div class="mx-auto w-100 order-0">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @Html.ActionLink("Logo/Nazwa", "Index", "Home", new { @class = "navbar-brand mx-auto", id = "l-n" })
            </div>
            <ul class="navbar-nav ml-auto flex-row" id="ul-nav">
                <li class="nav-item" id="koszyk-p">
                    <a class="nav-link" id="koszyk" href="koszyk.html"><font id="ilosc">2</font><span class="fas fa-shopping-basket float-right" id="ikona"></span></a>
                </li>
                <li class="nav-item" id="user">
                    <button class="nav-link" id="usr"><span class="fas fa-user float-right" id="ikona"></span></button>
                </li>
            </ul>
        </div>
    </nav>

    <div class="bg-secondary" id="login-register">
        <div id="hide-form"><div>></div></div>
        <form id="logreg">
            Logowanie:
            <input type="email" name="mail" placeholder="mail" required><br>
            <input type="password" name="pass" placeholder="password" required><br>
            <input type="submit" name="zaloguj" id="zaloguj" value="Zaloguj">
            <button id="rejestr">Zarejestruj</button>
        </form>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/temp")
    @RenderSection("scripts", required: false)
</body>
</html>
